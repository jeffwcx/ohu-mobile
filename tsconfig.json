{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": [
    ".storybook/**/*",
  ],
  "exclude": [
    ".storybook/preview.js",
    "node_modules",
    "dist",
    "lib",
    "lib-rem",
    "coverage",
    "packages/**",
    "storybook-static"
  ]
}
